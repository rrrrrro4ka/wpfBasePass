<Page x:Class="WpfApp1.Registr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Registr" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="32" Margin="250,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" VerticalContentAlignment="Center"/>
        <TextBox x:Name="password_copy" HorizontalAlignment="Left" Height="32" Margin="250,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" VerticalContentAlignment="Center"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Margin="250,89,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.062,-0.131"/>
        <Label Content="Повторите пароль:" HorizontalAlignment="Left" Margin="250,169,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.238,-0.077"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="250,258,0,0" VerticalAlignment="Top" Width="80" Click="registr_Click" Height="34"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="352,258,0,0" VerticalAlignment="Top" Width="119" Click="Bad_Click" Height="34"/>

    </Grid>
</Page>
